#!/bin/bash

mkdir -p pokemon_data
pokemon_list=(bulbasaur ivysaur venusaur charmander charmeleon)

fetch_pokemon() {
    name="$1"
    lower_name=$(echo "$name" | tr '[:upper:]' '[:lower:]')
    url="https://pokeapi.co/api/v2/pokemon/$lower_name"
    output_file="pokemon_data/${lower_name}.json"

    echo "Fetching data for $name..."
    response=$(curl -s -w "%{http_code}" -o "$output_file" "$url")
    http_code="${response: -3}"

    if [ "$http_code" -eq 200 ]; then
        echo "Saved data to $output_file ✅"
    else
        echo "❌ Failed to fetch data for $name (HTTP $http_code)"
        rm -f "$output_file"
    fi
}

# Run fetches in parallel
pids=()
for pokemon in "${pokemon_list[@]}"; do
    (
        fetch_pokemon "$pokemon"
    ) &
    pids+=($!)
done

# Wait and manage processes
for pid in "${pids[@]}"; do
    if wait "$pid"; then
        echo "Process $pid completed successfully."
    else
        echo "Process $pid failed. Killing..."
        kill "$pid" 2>/dev/null
    fi
done

echo "✅ All Pokémon processes handled."

