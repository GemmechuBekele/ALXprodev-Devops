#!/bin/bash

# Check if data.json exists
if [ ! -f data.json ]; then
  echo "Error: data.json not found."
  exit 1
fi

# Extract values using jq and process with sed/awk
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
weight=$(jq '.weight' data.json | awk '{printf "%.0f", $1 / 10}')
height=$(jq '.height' data.json | awk '{printf "%.1f", $1 / 10}')

# âœ… Final correct output line (real values are injected)
echo "${name} is of type ${type}, weighs ${weight}kg, and is ${height}m tall."

